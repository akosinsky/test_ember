<table>
  <tr>
  {{#each projection.properties as |prop|}}
    <th>{{prop}}</th>
  {{/each}}
  </tr>
  {{#each items as |item|}}
  <tr>
    {{#each projection.properties as |prop|}}
      <td>
        <!-- render an input and bind it to item[prop] -->
        {{dynamic-input
          type="text"
          classes="form-control form-control-trunc"
          readonly=true
          item=item
          propName=prop
        }}
      </td>
    {{/each}}
  </tr>
  {{else}}
  <tr>
    <td colspan="{{projection.properties.length}}">No items yet</td>
  </tr>
  {{/each}}
</table>
